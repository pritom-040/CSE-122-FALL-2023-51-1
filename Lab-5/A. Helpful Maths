#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int main()
{
      int i,j,cnt=0;
      string a;
      cin>>a;
      int b[1000];
      for(i=0;i<a.size();i++){
            if(a[i]=='+'){
                  continue;
            }
            else{
                  b[cnt]=a[i]-'0';
                  cnt++;
            }
      }
      sort(b,b+cnt);
      for(i=0;i<cnt;i++){
            cout<<b[i];
            if(i==cnt-1){
                  break;
            }
            cout<<"+";
      }
}
