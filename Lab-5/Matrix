#include <iostream>
#include <cmath>

using namespace std;

int main() {
    int a[5][5];
    int r, c;

    for (int i = 0; i < 5; i++) {
        for (int j = 0; j < 5; j++) {
            cin >> a[i][j];
            if (a[i][j] == 1) {
                r = abs(i - 2);
                c = abs(j - 2);
                int f = r + c;
                cout << f << endl;
            }
        }
    }

    return 0;
}
