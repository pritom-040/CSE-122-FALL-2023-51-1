#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,f;
    cin>>n>>f;
    int b[n];
    int cnt=0;
    for(int i=0;i<n;i++){
        cin>>b[i];
        }
        for(int i=0;i<n;i++){
            if(b[i]>0&&b[i]>=b[f-1]){
                cnt++;
            }
        }

    cout<<cnt<<endl;
}
